<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/login"
    >

	<LinearLayout
		android:id="@+id/daohang"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"

		android:layout_centerInParent="false"
		android:layout_centerVertical="false"
		android:background="#000000"
		android:orientation="horizontal">

		<Button
			android:id="@+id/CETWords"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/refesh"
			android:text="CET词汇"
			android:textColor="#FFFFFF"

			android:textSize="20sp"></Button>

		<Button
			android:id="@+id/GREWords"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/refesh"
			android:text="GRE词汇"
			android:textColor="#FFFFFF"
			android:textSize="20sp"></Button>

		<Button
			android:id="@+id/translate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/refesh"
			android:text="翻译"
			android:textColor="#FFFFFF"
			android:textSize="20sp"></Button>

		<Button
			android:id="@+id/attention"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/refesh"
			android:text="生词本"
			android:textColor="#FFFFFF"
			android:textSize="20sp" />

	</LinearLayout>

	<Button
		android:id="@+id/button"
		android:layout_width="260dp"
		android:layout_height="260dp"
		android:layout_above="@id/daohang"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="false"
		android:layout_marginBottom="200dp"
		android:background="@drawable/shape"
		android:text="ICON"
		android:textColor="#2BE0B3"
		android:textSize="60sp" />

	<Button
		android:id="@+id/button2"
		android:layout_width="6dp"
		android:layout_height="100dp"
		android:layout_above="@id/daohang"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="100dp"
		android:background="#FFFFFF" />

	<TextView
		android:id="@+id/restwordtext"
		android:layout_width="140dp"
		android:layout_height="90dp"
		android:layout_below="@id/button"
		android:layout_alignLeft="@id/button2"
		android:layout_marginTop="-200dp"
		android:gravity="center"
		android:text="300"
		android:textColor="#ffffff"
		android:textSize="50sp"
		app:fontFamily="sans-serif" />
	<TextView
		android:id="@+id/todaywordtext"
		android:layout_width="140dp"
		android:layout_height="90dp"
		android:layout_below="@id/button"
		android:layout_alignRight="@id/button2"
		android:layout_marginTop="-200dp"
		android:gravity="center"
		android:text="300"
		android:textColor="#ffffff"
		android:textSize="50sp"
		app:fontFamily="sans-serif" />

	<Button
		android:id="@+id/todayword"
		android:layout_width="100dp"
		android:layout_height="20dp"
		android:layout_below="@id/todaywordtext"
		android:layout_marginTop="0dp"
		android:layout_toLeftOf="@id/button2"
		android:background="#00ffffff"
		android:gravity="center"
		android:text="今日单词"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
		android:textStyle="bold" />

	<Button
		android:id="@+id/restword"
		android:layout_width="100dp"
		android:layout_height="20dp"
		android:layout_below="@id/restwordtext"
		android:layout_toRightOf="@id/button2"
		android:background="#00ffffff"
		android:gravity="center"
		android:text="剩余待学"
		android:textColor="#FFFFFF"
		android:textSize="16sp"
		android:textStyle="bold" />

    <Button
        android:id="@+id/totalword"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_above="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/shapebaiseanniu"
        android:gravity="clip_horizontal|center|left"
        android:text="已学完50/900"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

	<Button
		android:id="@+id/startstudy"
		android:layout_width="160dp"
		android:layout_height="40dp"
		android:layout_below="@id/button"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-220dp"
		android:background="@drawable/startstudy"
		android:text="开始学习"
		android:textColor="#FFFFFF"
		android:textStyle="bold" />

	<Button
		android:id="@+id/renewplan"
		android:layout_width="120dp"
		android:layout_height="20dp"
		android:layout_above="@id/button"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="48dp"
		android:layout_marginBottom="-47dp"
		android:background="@drawable/jihuabutton"
		android:text="距离学完还有XX天"
		android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/collection"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_above="@id/button"
        android:layout_alignRight="@id/totalword"
        android:background="@drawable/collection" />

</RelativeLayout>
