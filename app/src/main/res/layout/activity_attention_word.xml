<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background">

    <RelativeLayout
        android:id="@+id/lv_attention_word_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/button_attword_search"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/sousuo" />


        <EditText
            android:id="@+id/Edittext_attword_search"
            android:layout_width="345dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/button_attword_search"
            android:background="@drawable/queding"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>

     <ListView
         android:id="@+id/lv_attention_words"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/attention_buttons_line"
         android:layout_below="@+id/lv_attention_word_title">
     </ListView>

    <LinearLayout
        android:id="@+id/attention_buttons_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_delete_attention_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/refesh"
            android:text="清空生词本"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_attention_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/refesh"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>