<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zzwordapp"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:icon="@mipmap/me"
        android:label="ZzWord"
        android:roundIcon="@mipmap/me"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity android:name="com.example.zzwordapp.AttWordInfo" />
        <activity android:name="com.example.zzwordapp.NotAttWordInfo" />
        <activity android:name="com.example.zzwordapp.translateAct" />
        <activity android:name="com.example.zzwordapp.AttentionWord" />
        <activity android:name="com.example.zzwordapp.GREWord" />
        <activity android:name="com.example.zzwordapp.ChangePlan" />
        <activity android:name="com.example.zzwordapp.WordListActivity" />
        <activity
            android:name="com.example.zzwordapp.RememberWord"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.zzwordapp.MainActivity"
            android:label="ZzWord"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>