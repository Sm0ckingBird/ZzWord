    <Button
        android:id="@+id/totalword"
        android:layout_width="188dp"
        android:layout_height="27dp"
        android:layout_above="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/shapebaiseanniu"
        android:gravity="clip_horizontal|center|left"
        android:text="已学完50/900"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

	<Button
		android:id="@+id/startstudy"
		android:layout_width="160dp"
		android:layout_height="40dp"
		android:layout_below="@id/button"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-220dp"
		android:background="@drawable/startstudy"
		android:text="开始学习"
		android:textColor="#FFFFFF"
		android:textStyle="bold" />

	<Button
		android:id="@+id/renewplan"
		android:layout_width="120dp"
		android:layout_height="20dp"
		android:layout_above="@id/button"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="48dp"
		android:layout_marginBottom="-47dp"
		android:background="@drawable/jihuabutton"
		android:text="距离学完还有XX天"
		android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/collection"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_above="@id/button"
        android:layout_alignRight="@id/totalword"
        android:background="@drawable/collection" />

</RelativeLayout>
